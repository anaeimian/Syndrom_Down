<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.syndrom_down.LoghatGeneralActivity5">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/imbaba"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/wordImg" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check"
        android:id="@+id/pass"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/word"
        android:layout_alignEnd="@+id/word"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/replay"
        android:id="@+id/replay"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/word"
        android:layout_alignStart="@+id/word"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp" />

</RelativeLayout>
