<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.syndrom_down.FelGeneralActivity1">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="@dimen/fel_video_width"
        android:layout_height="@dimen/fel_video_height"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/centered"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/centered"
        android:layout_marginRight="10dp"
        android:src="@drawable/check" />


    <ImageView
        android:id="@+id/guide"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/guide" />


    <ImageView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/centered"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/centered"
        android:layout_marginLeft="10dp"
        android:src="@drawable/replay" />

    <ImageView
        android:id="@+id/centered"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
