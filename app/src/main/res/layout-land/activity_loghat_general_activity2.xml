<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.syndrom_down.LoghatGeneralActivity2">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tbaba"
        android:id="@+id/word"
        android:layout_toRightOf="@+id/arrow"
        android:layout_toEndOf="@+id/arrow"
        android:layout_alignTop="@+id/arrow"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />
    <ImageView
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:src="@drawable/arrow1"
        android:id="@+id/arrow"
        android:layout_alignTop="@+id/wordImg"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/imbaba"
        android:id="@+id/wordImg"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"/>
    <ImageView
        android:id="@+id/guide"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/guide" />

</RelativeLayout>
