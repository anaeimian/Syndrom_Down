<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--<include-->
    <!--android:id="@+id/app_bar"-->
    <!--layout="@layout/app_bar" />-->
    <ImageView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/football" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ball" />


    <ImageView
        android:id="@+id/pic1"
        android:layout_width="@dimen/football_word_width"
        android:layout_height="@dimen/football_word_height"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/football_word_margin"
        android:layout_marginRight="@dimen/football_word_margin"
        android:layout_toLeftOf="@+id/ball"
        android:layout_toStartOf="@+id/ball"
        android:src="@drawable/tbaba" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="@dimen/football_word_width"
        android:layout_height="@dimen/football_word_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/football_word_margin"
        android:layout_marginStart="@dimen/football_word_margin"
        android:layout_toEndOf="@+id/ball"
        android:layout_toRightOf="@+id/ball"
        android:src="@drawable/tmaman" />

</RelativeLayout>