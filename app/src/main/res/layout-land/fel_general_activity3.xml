<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.syndrom_down.FelGeneralActivity3">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/imbede"
        android:id="@+id/verbImg"
        android:layout_alignTop="@+id/arrow"
        android:layout_toRightOf="@+id/arrow"
        android:layout_toEndOf="@+id/arrow" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/arrow1"
        android:id="@+id/arrow"
        android:layout_alignTop="@+id/verb"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/imbaba"
        android:id="@+id/verb"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="109dp"
        android:layout_marginStart="109dp" />
</RelativeLayout>
