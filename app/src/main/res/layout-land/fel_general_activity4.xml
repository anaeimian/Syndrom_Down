<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arman.syndrom_down.FelGeneralActivity4">

    <ImageView
        android:id="@+id/verb"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/arrow"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/arrow"
        android:layout_toRightOf="@+id/arrow"
        android:src="@drawable/imbaba" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignTop="@+id/verbImg"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow1" />

    <ImageView
        android:id="@+id/verbImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:src="@drawable/imbede" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/star2"
        android:src="@drawable/qaz"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/qaz"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/bottomAligner"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/guide"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/guide" />

</RelativeLayout>
