<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imView0"
            android:layout_width="@dimen/badkonak"
            android:layout_height="@dimen/badkonak"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imView1"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/bad"
            android:visibility="invisible" />

        <!--<ImageView-->
        <!--android:id="@+id/word1"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="50dp"-->
        <!--android:src="@drawable/bad" />-->

        <!--<ImageView-->
        <!--android:id="@+id/word2"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="50dp"-->
        <!--android:src="@drawable/tmaman" />-->

        <ImageView
            android:id="@+id/imView1"
            android:layout_width="@dimen/badkonak"
            android:layout_height="@dimen/badkonak"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/bad"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/star1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/guide"
            android:layout_alignRight="@+id/guide"
            android:layout_alignTop="@+id/star2"
            android:src="@drawable/star_black"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/star7"
            android:layout_toLeftOf="@+id/star5"
            android:layout_toStartOf="@+id/star5"
            android:src="@drawable/star_gray"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/word"
            android:layout_alignStart="@+id/word"
            android:layout_alignTop="@+id/star4"
            android:src="@drawable/star_yellow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/star7"
            android:layout_toRightOf="@+id/star7"
            android:src="@drawable/star_gray"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/star_yellow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/guide"
            android:layout_alignRight="@+id/guide"
            android:layout_alignTop="@+id/star2"
            android:src="@drawable/star_black"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/imView1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imView1"
            android:src="@drawable/star_gray"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/star2"
            android:layout_toEndOf="@+id/star2"
            android:layout_toRightOf="@+id/star2"
            android:src="@drawable/star_yellow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/star10"
            android:layout_toRightOf="@+id/star10"
            android:src="@drawable/star_gray"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/star10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/star8"
            android:layout_toEndOf="@+id/star8"
            android:layout_toRightOf="@+id/star8"
            android:src="@drawable/star_yellow"
            android:visibility="invisible" />


    </RelativeLayout>


</LinearLayout>