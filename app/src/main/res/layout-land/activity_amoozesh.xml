<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <ImageView
        android:id="@+id/imViewLoghat"
        android:layout_width="@dimen/amoozesh_item_dim"
        android:layout_height="@dimen/amoozesh_item_dim"
        android:layout_alignEnd="@+id/centered"
        android:layout_alignRight="@+id/centered"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/words" />

    <ImageView
        android:id="@+id/imViewJomle"
        android:layout_width="@dimen/amoozesh_item_dim"
        android:layout_height="@dimen/amoozesh_item_dim"
        android:layout_alignLeft="@+id/centered"
        android:layout_alignStart="@+id/centered"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/sentences" />

    <ImageView
        android:id="@+id/centered"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />


</RelativeLayout>